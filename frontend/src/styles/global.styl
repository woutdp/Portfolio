@import './variables'

html
    height: 100%

body
    height: 100%
    margin: 0
    font-family: Roboto, -apple-system, BlinkMacSystemFont, Segoe UI, Oxygen, Ubuntu, Cantarell, Fira Sans, Droid Sans, Helvetica Neue, sans-serif
    font-size: 16px
    line-height: 1.5
    color: foreground
    background-color: background

    +mobile()
        font-size: 14px;

h1, h2, h3, h4, h5, h6
    margin: 0 0 0.5em 0
    font-weight: 400
    line-height: 1.2
    text-transform: capitalize

h1
    font-size: 2em

a
    color: cyan

hr
    background-color: tint(background, 5%)
    border: none
    display: block
    height: 2px
    margin: 1.5rem 0

code
    font-family: menlo, inconsolata, monospace
    font-size: calc(1em - 2px)
    color: darken(white, 10%)
    background-color: black
    padding: 0.2em 0.4em
    border-radius: 2px
    white-space: nowrap

.center
    display: flex;
    justify-content: center
    align-items: center
    flex-direction: column

.full-page
    height: calc(100vh - 40px)
    padding: 20px

.section
    padding: 3rem 1.5rem

.container
    margin: 0 auto

    +above(1100px)
        min-width: 1000px
        width: 1000px

    +above(1200px)
        min-width: 1100px
        width: 1100px

    +above(1300px)
        min-width: 1200px
        width: 1200px

    +above(1400px)
        min-width: 1300px
        width: 1300px

#sapper
    height: 100%
